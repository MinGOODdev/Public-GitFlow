{{#partial "content"}}
  <hr>

  <h2 class="text-center">
    <strong class="home-english-font">GitFlow</strong>
    <strong>{{partName}} 파트 지원서</strong>
  </h2>

  <hr>

  {{#applyForm}}
    <form action="/apply/submit" method="post" modelAttribute="applyContent">
      <input type="hidden" name="partId" value="{{partId}}">
      <input type="hidden" name="userId" value="{{currentUser.id}}">

      <div class="row" style="width: 78%; margin: auto;">
        <div class="col-sm">
          <label for="userName"><h4><span class="badge badge-dark">지원자 성함</span></h4></label>
          <input type="text" class="form-control" name="userName"
                 placeholder="성함을 입력해주세요.">
        </div>

        <div class="col-sm">
          <label for="phoneNumber"><h4><span class="badge badge-dark">연락처</span></h4></label>
          <input type="text" class="form-control" name="phoneNumber"
                 placeholder="010-XXXX-XXXX">
        </div>

        <div class="col-sm">
          <label for="email"><h4><span class="badge badge-dark">이메일</span></h4></label>
          <input type="email" class="form-control" name="email"
                 placeholder="이메일을 입력해주세요.">
        </div>
      </div>

      <hr>

      <div class="form-group margin-auto notice-width">
        <label for="content1"><b>{{form1}}</b></label>
        <textarea class="form-control" name="content1" cols="20" rows="10"></textarea>

        <hr>

        <label for="content2"><b>{{form2}}</b></label>
        <textarea class="form-control" name="content2" cols="20" rows="10"></textarea>

        <hr>

        <label for="content3"><b>{{form3}}</b></label>
        <textarea class="form-control" name="content3" cols="20" rows="10"></textarea>
      </div>

      <div class="text-center">
        <input type="submit" value="최종 지원" class="btn btn-primary pg-margin-bottom" data-confirm-submit>
      </div>
    </form>
  {{/applyForm}}
{{/partial}}

{{>base}}